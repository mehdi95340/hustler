<%= turbo_frame_tag :expenses, class: "container mt-4 p-4 text-light bg-dark rounded shadow" do %>
  <h2 class="text-primary mb-4">Update Budget</h2>
  <%= simple_form_for(@budget, html: { class: "needs-validation" }) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :total_amount, "Total Budget Amount", class: "form-label" %>
      <%= f.input :total_amount, input_html: { class: "form-control bg-secondary text-light", placeholder: "Enter total budget" }, label: false %>
    </div>
    <div class="form-group">
      <%= f.submit "Save Budget", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
